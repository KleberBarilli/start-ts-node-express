{
	"compilerOptions": {
	  "target": "ES2015",
	  "module": "commonjs",
	  "lib": ["es6"],
	  "allowJs": true,
	  "outDir": "build",
	  "rootDir": "src",
	  "strict": true,
	  "noImplicitAny": true,
	  "strictPropertyInitialization": false,
	  "useUnknownInCatchVariables": true,
	  "baseUrl": ".",
	  "typeRoots": [
		"@types",
		"./node_modules/@types"
	  ],
	  "paths": {
		"@config/*": [
		  "src/config/*"
		],
		"@modules/*": [
		  "src/modules/*"
		],
		"@shared/*": [
		  "src/shared/*"
		],
	  },
	  "esModuleInterop": true,
	  "experimentalDecorators": true,
	  "emitDecoratorMetadata": true,
	  "resolveJsonModule": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true
	},
	"include": ["./src"],
	"exclude": ["node_modules","build","dist","./docker"]
  }
